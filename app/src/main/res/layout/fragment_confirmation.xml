<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.ConfirmationFragment"
    android:id="@+id/doctor_patient_confirmation"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">  <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/doctorpatient"
            android:layout_marginTop="200dp">

        </ImageView>

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/abril_fatface"
            android:textSize="40sp"
            android:text="Are you a doctor?"
            android:textColor="#0A90EA"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center_horizontal" />


        <Button
            android:id="@+id/yes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_button_orange"
            android:text="Yes"
            android:textStyle="italic"
            android:textSize="19sp"/>

        <Button
            android:id="@+id/no_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yes_button"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            android:background="@drawable/rounded_button_orange"
            android:text="No"
            android:textSize="19sp"
            android:textStyle="italic"
            android:backgroundTint="@color/red"/>
    </RelativeLayout>
</FrameLayout>